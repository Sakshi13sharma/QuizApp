<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/img"
    android:weightSum="1"
    tools:context="com.example.sakshiquiz.quiz.AddActivity">
    <EditText
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="40dp"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:hint="Add question NO."
        android:textColor="@color/Black"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/questionadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:hint="Add question"/>


    <EditText
        android:id="@+id/choice11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textColor="@color/Black"
        android:hint="Choice1"/>

    <EditText
        android:id="@+id/choice21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"

        android:hint="Choice2"
        android:textColor="@color/Black"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/choice31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Choice3"
        android:textColor="@color/Black" />

    <EditText
        android:id="@+id/choice41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Choice4"
        android:textColor="@color/Black" />

    <EditText
        android:id="@+id/answerofquestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Answer"/>


    -<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="179dp"
        android:id="@+id/clear_btn"
        android:text="Clear"
        android:layout_toRightOf="@+id/savemyquestions"/>

    <Button
        android:id="@+id/savemyquestions"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:onClick="saveQuestions"
        android:text="save"
        android:textColor="@color/Black" />

</LinearLayout>

</LinearLayout>


